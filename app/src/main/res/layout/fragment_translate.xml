<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".translate.TranslateFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/translateToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/fromLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/swapLang"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="Англиский" />

            <ImageView
                android:id="@+id/swapLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_swap_horiz_black_24dp" />

            <TextView
                android:id="@+id/toLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/swapLang"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="Русский" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/textToTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/doTranslate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBar"
        android:background="@android:color/white"
        android:gravity="top"
        android:hint="Введите текст"
        android:inputType="textMultiLine"
        android:lines="7"
        android:paddingBottom="8dp"
        android:paddingEnd="40dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:scrollbars="vertical"
        tools:text="йцукенрнгирорипмнаспмрипмаваываыва" />

    <Button
        android:id="@+id/doTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textToTranslate"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Translate" />

    <TextView
        android:id="@+id/translatedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/doTranslate"
        android:layout_alignStart="@+id/textToTranslate"
        android:layout_below="@+id/doTranslate"
        android:layout_marginTop="8dp"
        tools:text="TextView" />

    <CheckBox
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textToTranslate"
        android:layout_alignTop="@+id/doTranslate"
        android:button="@drawable/checkbox_favorite_custom" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/translatedText"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="13dp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_bookmark_border_black_24dp" />

    <ImageView
        android:id="@+id/clearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/appBar"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        app:srcCompat="@drawable/ic_clear_black_24dp" />

</RelativeLayout>
